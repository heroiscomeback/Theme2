{% comment %}
  This page template is a requirement if you are submitting your theme to the Shopify Theme Store.
  Be sure to select page.contact as the template from the admin page to have this template take effect.

  For information on adding more fields, visit:
    - http://docs.shopify.com/support/configuration/store-customization/adding-fields-to-the-liquid-contact-form
{% endcomment %}

{% comment %}
  Google Map
{% endcomment %}
{% if section.settings.display_google_map %}
<div class="map">
  {% if section.settings.google_map_code != blank %}
  {{ section.settings.google_map_code }}
  {% endif %}
</div>
{% endif %}
  {% include 'breadcrumb' %}
<div class="contactus-page container">

    
  {% comment %}
    Regular page content goes here.
  {% endcomment %}
  <div class="rte">
    {{ page.content }}
  </div>
  
  {% comment %}
    Contact form starts here
  {% endcomment %}
  <div>
    {% form 'contact' %}
    
    {% comment %}
      Successful message
    {% endcomment %}
    {% if form.posted_successfully? %}
    <p class="note form-success" {% if settings.enable_multilang %}data-translate="contact.form.post_success"{% endif %}>
      {{ 'contact.form.post_success' | t }}
    </p>
    {% endif %}
    
    {{ form.errors | default_errors }}
    
    <div class="row">    
      <div class="col-xs-12 col-lg-8">
        <div id="contactFormWrapper">
          <header class="page-header">
          	<h1>{% include 'multilang' with section.settings.contact_title %}</h1>
          </header>
          <div class="contact-des">
            {% include 'multilang' with section.settings.contact_text_desc %} 
          </div>
          <div class="contact-content">
          <label for="contactFormName"><span {% if settings.enable_multilang %}data-translate="contact.form.name"{%endif%}>{{ 'contact.form.name' | t }}</span></label>
          <input class="form-control" type="text" id="contactFormName" name="contact[name]" autocapitalize="words" placeholder="{{ section.settings.contact_your_name }}">
            
          <label for="contactFormPhone"><span {% if settings.enable_multilang %}data-translate="contact.form.phone"{%endif%}>{{ 'contact.form.phone' | t }}</span></label>
          <input class="form-control" type="tel" name="contact[phone]" id="contactFormPhone" pattern="[0-9]*" placeholder="{{ section.settings.contact_phone_number }}">
          
          <label for="contactFormEmail"><span {% if settings.enable_multilang %}data-translate="contact.form.email"{%endif%}>{{ 'contact.form.email' | t }}</span><em>*</em></label>
          <input class="form-control" type="email" name="contact[email]" id="contactFormEmail" autocorrect="off" autocapitalize="off" placeholder="{{ section.settings.contact_your_email }}">
          
          <label for="contactFormMessage"><span {% if settings.enable_multilang %}data-translate="contact.form.message"{%endif%}>{{ 'contact.form.message' | t }}</span><em>*</em></label>
          <textarea class="form-control" rows="10" name="contact[body]" id="contactFormMessage" {% if settings.enable_multilang %}data-translate="contact.form.placeholder_message" translate-item="placeholder"{%endif%} placeholder="{{ 'contact.form.placeholder_message' | t }}"></textarea>
          <!--captcha-->
            <div class="captcha">
               How much is: <input type="text" readonly="readonly" id="question" style="width:100px;"/>
	         Answer:* <input type="text" id="answer" style="width:100px;"/>
		  </div>
            <!--end_captcha-->
            <input type="checkbox" name="privacy" checked="checked" style="width:30px;min-height:15px;">I have read and agree to <a href="https://www.vxdas.com/pages/privacy-policy">VXDAS Privacy Policy</a><br/>
          <input type="submit" class="btn left" {% if settings.enable_multilang %}data-translate="contact.form.submit_contact"{%endif%} value="{{ 'contact.form.submit_contact' | t }}">
          </div>
         </div>
      </div>
      
      {% if section.settings.display_location %}
      <div class="col-xs-12 col-lg-4 column-left">
        <h3 class="title_2">{% include 'multilang' with section.settings.title_store_location %}</h3>
        {% if section.settings.location_code != blank %}
        	<div class="location">{% include 'multilang' with  section.settings.location_code %}</div>
        {% endif %}
      </div>
      {% endif %}
    </div>
    {% endform %}
  </div>
</div>
{% schema %}
    {
    "name": "Contact Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "display_google_map",
        "label": "Display Google Map?",
        "default": true
      },
      {
        "type": "textarea",
        "id": "google_map_code",
        "label": "Google Map Code"
      },
      {
        "type": "text",
        "id": "contact_title",
        "label": "Title",
        "default": "Drop Us A Line"
      },
      {
        "type": "richtext",
        "id": "contact_text_desc",
        "label": "Text Description"
      },
      {
        "type": "text",
        "id": "contact_your_name",
        "label": "Placeholder text in Your Name"
      },
      {
        "type": "text",
        "id": "contact_phone_number",
        "label": "Placeholder text in Your Phone"
      },
      {
        "type": "text",
        "id": "contact_your_email",
        "label": "Placeholder text in Your Email"
      },
      {
        "type": "checkbox",
        "id": "display_location",
        "label": "Display Location?",
        "default": true
      },
	  {
		"type" : "text",
		"id" : "title_store_location",
		"label" : "Title 2",
		"default" : "Store Location"
	  },
      {
        "type": "richtext",
        "id": "location_code",
        "label": "Location Code"
      }
    ]
  }
{% endschema %}
