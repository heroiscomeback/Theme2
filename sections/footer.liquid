<style>
  .footer{
    	background:{{section.settings.bg_ft }};
    	color: {{section.settings.color_ft_text}};
    	border-top: 1px solid {{section.settings.ft_border}};
  }
  .need_help, .footer-top{
  		border-bottom: 1px solid {{section.settings.ft_border}};
  }
  .footer .footer-top ul li{
  		border-right: 1px solid {{section.settings.ft_border}};
  }
  .footer .footer-top ul li a, .footer .footer-middle ul li a{
    	color: {{section.settings.color_ft_text}};
  }
  .footer .footer-top ul li:last-child{
  		border-right: 0px;
  }
  .footer-top .container{
        border-left: 1px solid {{section.settings.ft_border}};
    	border-right: 1px solid {{section.settings.ft_border}};
  }
  .footer-bottom{
        background:{{section.settings.bg_ft_bt }};
        color: {{section.settings.color_ft_bt}};
  }
  .footer-bottom a{
    	color: {{section.settings.color_ft_bt}};
  }
  .footer h3{
    	color: {{section.settings.color_ft_header}}
  }
  .footer .footer-top i{
    	color: {{section.settings.color_ft_text}};
    	opacity: 0.8;
  }
  .mn_brands a{
    	color: {{section.settings.color_ft_text}};
    	font-weight:700;
  }
  .mn_brands a i{
  		color: {{section.settings.color_ft_text}};
    	margin-right:5px;
    	font-size:11px;
    	opacity: 0.5;
  }
</style>
