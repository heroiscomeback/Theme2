<footer class="footer">
  {% if section.settings.display_need_help %}
  <div class="need_help">
    <div class="container">
  	{% include 'multilang' with section.settings.content_need_help %}
    </div>
  </div>
  {% endif %}
  {% if section.settings.display_footer_top %}
  <div class="footer-top">
    <div class="container">
        <ul class="row">
          <li class="col-sm-6 col-md-3">
            <i class="fa fa-truck" aria-hidden="true"></i>
            <div class="content-info">
              <h3>{% include'multilang' with section.settings.ft_title_1 %}</h3>
              <div class="content-text">
                  {% include'multilang' with section.settings.content_footer_1 %}
              </div>
            </div>
          </li>
          <li class="col-sm-6 col-md-3">
            <i class="fa fa-credit-card" aria-hidden="true"></i>
            <div class="content-info">
              <h3>{% include'multilang' with section.settings.ft_title_2 %}</h3>
              <div class="content-text">
                  {% include'multilang' with section.settings.content_footer_2 %}
              </div>
            </div>
          </li>
          <li class="col-sm-6 col-md-3">
            <i class="fa fa-shield" aria-hidden="true"></i>
            <div class="content-info">
              <h3>{% include'multilang' with section.settings.ft_title_3 %}</h3>
              <div class="content-text">
                  {% include'multilang' with section.settings.content_footer_3 %}
              </div>
            </div>
          </li>
          <li class="col-sm-6 col-md-3">
            <i class="fa fa-phone" aria-hidden="true"></i>
            <div class="content-info">
              <h3>{% include'multilang' with section.settings.ft_title_4 %}</h3>
              <div class="content-text">
                  {% include'multilang' with section.settings.content_footer_4 %}
              </div>
            </div>
          </li>
        </ul>
    </div>
  </div>
  {% endif %}
  <div class="footer-middle container">
    <div class="row">
      <div class="col-6 col-xs-6 col-md-2 column-footer">
          {% if section.settings.footer_title_1 != blank %}
           <h3>{% include 'multilang' with section.settings.footer_title_1 %}</h3>
          {% endif %}
          {%- assign footer_linklist = section.settings.footer_linklist -%}
          {% if linklists[footer_linklist].links.size > 0 %}
              <ul>
                  {% for link in linklists[footer_linklist].links %}
                       <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
                  {% endfor %}
              </ul>
          {% endif %}
      </div>
      <div class="col-6 col-xs-6 col-md-2 column-footer">
          {% if section.settings.footer_title_2 != blank %}
           <h3>{% include 'multilang' with section.settings.footer_title_2 %}</h3>
          {% endif %}
          {%- assign footer_linklist = section.settings.footer_linklist_2 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
              <ul>
                  {% for link in linklists[footer_linklist].links %}
                       <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
                  {% endfor %}
              </ul>
          {% endif %}
      </div>
      <div class="col-6 col-xs-6 col-md-2 column-footer">
          {% if section.settings.footer_title_3 != blank %}
           <h3>{% include 'multilang' with section.settings.footer_title_3 %}</h3>
          {% endif %}
          {%- assign footer_linklist = section.settings.footer_linklist_3 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
              <ul>
                  {% for link in linklists[footer_linklist].links %}
                       <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
                  {% endfor %}
              </ul>
          {% endif %}
      </div>
      <div class="col-6 col-xs-6 col-md-2 column-footer">
          {% if section.settings.footer_title_4 != blank %}
           <h3>{% include 'multilang' with section.settings.footer_title_4 %}</h3>
          {% endif %}
          {%- assign footer_linklist = section.settings.footer_linklist_4 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
              <ul>
                  {% for link in linklists[footer_linklist].links %}
                       <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
                  {% endfor %}
                {% if section.settings.view_all_brands != blank %}
                <li class="mn_brands"><a href="{{section.settings.link_view_all}}"><i class="fa fa-chevron-right" aria-hidden="true"></i> {% include 'multilang' with section.settings.view_all_brands %}</a></li>
                {% endif %}
              </ul>
          {% endif %}       
      </div>
      <div class="col-12 col-xs-6 col-md-4 column-footer">     
          {% if section.settings.footer_newsletter_enable %}
           <div class="footer-newsletter">
             <h3 >{% include 'multilang' with section.settings.footer_newsletter_text %}</h3>
             <div class="des">{% include 'multilang' with  section.settings.des_newsletter %}</div>
             {% include 'homepage-block-newsletter' %}
           </div>
          {% endif %}
          {% if section.settings.footer_social_enable %}
            <div class="footer-social">
              {% if section.settings.footer_social_title != blank %}
              <h3>{% include 'multilang' with section.settings.footer_social_title %}</h3>
               {% endif %}
              {% include 'social-media' %}
            </div>
          {% endif %}
      </div>
    </div>
  </div>
  {% if section.settings.display_ft_bt %}
  <div class="footer-bottom">
    <div class="container">
    <div class="row">
      <div class="footer_address col-xs-12 col-md-6">
      	{% include'multilang' with section.settings.ft_address %}
      </div>
      <div class="footer_address clmn-left col-xs-12 col-md-6">
        {% if section.settings.icon_payment != blank %}
        {%- assign img_url = section.settings.icon_payment | img_url: '600x' -%}
<!--       	<div class="lazy-images-contain">
          <div class="lazy-images-placeholder"><i class="fa fa-spinner"></i></div>
          <div class="lazy-images" style="background-image:url({{img_url}})">
          </div>
        </div> -->
        <img src="{{ img_url }}" alt="{{ block.settings.image.alt }}"/>
        {% endif %}
      </div>
    </div>
    </div>
  </div>
  {% endif %}
</footer>
{% include 'message-modal' %}
