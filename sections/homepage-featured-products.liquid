{% if section.settings.show_slider_trending %}

<div class="widget-trending-product" id="trending-product-{{section.id}}" data-sectionid="{{section.id}}">
  {% if section.settings.title != blank %}
  <div class="widget-title">   
    <h2>{% include 'multilang' with section.settings.title %}</h2>
  </div>
  {% endif %}
  <div class="widget-product">
    <div class="products-grid row" data-row="{{ section.settings.trending_collection_results_per_row }}">
      {% if section.settings.trending_collection_results_per_row != blank and section.settings.trending_collection_results_per_row != '5' %}
        {% assign product_grid = 12 | divided_by: section.settings.trending_collection_results_per_row %}
        {% assign columns = true %}
      {% endif %}        
	  {%- assign collection = collections[section.settings.show_slider_trending_collection] -%}
      {% for product in collection.products limit:section.settings.slider_trending_limit_all %}        
        <div class="{% if settings.product_image_border %}grid-item-border{% endif %}{% if settings.product_image_crop %} crop_image{% else %} no_crop_image{% endif %} grid-item col-xs-6 col-sm-4 {% if product_grid == 3 %}col-md-3{% endif %} {% if columns %}col-lg-{{product_grid}}{% else %}col{% endif %}">
       	 {% include 'product-grid-item' %}
        </div>
      {% else %}
      {% for product in (1..section.settings.slider_trending_limit_all) %}
         <div class="grid-item col-xs-6 col-sm-4 {% if product_grid == 3 %}col-md-3{% endif %} {% if columns %}col-lg-{{product_grid}}{% else %}col{% endif %}">
           <div class="grid-view-item no-product">
             <a href="#" class="grid-item-link">
               <div class="grid-item-image">
                 {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                 {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
               </div>
               <div class="product-title"><span>[Sample] Collette, florentine jungle dress</span></div>
             </a>
             <div class="price-box">
              <span> $200.00 </span>
             </div>
           </div>
         </div>
        {% endfor %}
      {% endfor %}
     </div>
  </div>
</div>

{% endif %}
{% schema %}
  {
    "name": "Featured Products",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_slider_trending",
        "label": "Enable",
        "default": true
      },
 		{
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Featured Products"
      },
      {
        "type": "collection",
        "id": "show_slider_trending_collection",
        "label": "Collection to use"
      }, 
      {
        "type": "text",
        "id": "slider_trending_limit_all",
        "label": "Number of products to show",
        "default": "20"
      },
      {
        "type": "select",
        "id": "trending_collection_results_per_row",
        "label": "Products per row",
        "options": [
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          },
          {
            "value": "6",
            "label": "6"
          }
        ],
        "default": "5"
     }
 	 
	],
	"presets": [
      {
        "name": "Featured Products",
        "category": "Collection"
      }
    ]
  }
{% endschema %}