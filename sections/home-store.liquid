 {% if section.settings.display_store %}
  <section class="module-store">
      <div class="module-heading">
        <h3>
        	{% include 'multilang' with section.settings.title_store %}
        </h3>
      </div>
      <div class="module-content row">
        <div class="st-column col-sm-3">
          {% if section.settings.show_icon %}<i class="fa fa-check"></i>{% endif %}
          {% include 'multilang' with section.settings.content_1 %}
        </div>
        <div class="st-column col-sm-3">
          {% if section.settings.show_icon %}<i class="fa fa-cog"></i>{% endif %}
          {% include 'multilang' with section.settings.content_2 %}
        </div>
        <div class="st-column col-sm-3">
          {% if section.settings.show_icon %}<i class="fa fa-star"></i>{% endif %}
          {% include 'multilang' with section.settings.content_3 %}
        </div>
        <div class="st-column col-sm-3">
          {% if section.settings.show_icon %}<i class="fa fa-rotate-left"></i>{% endif %}
          {% include 'multilang' with section.settings.content_4 %}
        </div>
      </div>
  </section>
  {% endif %}

{% schema %}
  {
    "name": "The Store Advantage",
	"settings": [
	  {
		"type" : "header",
		"content" : "The Store Advantage"
	  },
	  {
		"type" : "checkbox",
		"id" : "display_store",
		"label" : "Enable",
		"default" : true
	  },
	  {
		"type" : "text",
		"id" : "title_store",
		"label" : "Title 2",
		"default" : "The Store Advantage"
	  },
	  {
		"type" : "checkbox",
		"id" : "show_icon",
		"label" : "Display Icon",
		"default" : true
	  },
	  {
		"type" : "richtext",
		"id" : "content_1",
		"label" : "Content 1"
	  },
	  {
		"type" : "richtext",
		"id" : "content_2",
		"label" : "Content 2"
	  },
	  {
		"type" : "richtext",
		"id" : "content_3",
		"label" : "Content 3"
	  },
	  {
		"type" : "richtext",
		"id" : "content_4",
		"label" : "Content 4"
	  }
	  
	],
    "presets": [
      {
        "name": "Home Store Advantage"
      }
    ]
  }
{% endschema %}

<script>
  $(window).resize(function() {
    if ($(window).innerWidth() <= 767) {
      $(document).ready(function(){
        jQuery(".module-store .module-content").not('.slick-initialized').slick({
          slidesToScroll: 1,
          slidesToShow: 1
        });
      });
    }
  });
</script>


