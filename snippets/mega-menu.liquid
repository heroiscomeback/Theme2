{% if display_custom_block %}
  {% if block_style == "style_3"  %}
  <div class="col-xs-12 col-md-3 custom-block">
    <h4>{% include 'multilang' with title_custom_block %}</h4>
    <div class="content-custom">{% include 'multilang' with content_custom %}</div>
    {% if banner_first_style != blank %}
    <a href="{{ link_banner_first_style }}" title="">
      <img src="{{ banner_first_style | img_url : "2000x" }}" alt="" />
    </a>
    {% endif %}
  </div>
  {% endif %}
{% endif %}

{% if block_style == "style_1" %}
<div class="column-1{% if banner_first_style != blank or banner_second_style != blank %} col-xs-12 col-sm-9{% else %} col-md-12{% endif %}">
  {% elsif block_style == "style_5" %}
  <div class="column-1{% if display_image %} col-xs-12 col-sm-8{% else %} col-md-12{% endif %}">
    {% elsif block_style == "style_2" %}
    <div class="column-1 col-md-12">
      {% elsif block_style == "style_3" %}
      <div class="column-1 {% if display_product and display_custom_block %}col-md-6 {% elsif display_custom_block == true and display_product == false %} col-md-9{% elsif display_custom_block == false and display_product == true %} col-md-9 {% else %}col-md-12{% endif %}">
        {% elsif block_style == "style_4" %}
        <div class="column-1 col-md-12">
          {% endif %}
          <div class="row">
            {% for l in linklists[link.handle].links %}       
            <div class="inner col-md-4 {%if block_style == "style_4" %} col-lg-3{% endif %} {% if linklists[link.handle] != empty %}dropdown {% endif %}{% if display_image == false %}col-lg-3{% endif %} {% if block_style == "style_3"  %}{% if display_product and display_custom_block %}col-md-6 {% elsif display_custom_block == true and display_product == false %} col-md-4{% elsif display_custom_block == false and display_product == true %} col-md-4 {% else %}col-md-4{% endif %}{% endif %}">
              <!-- Menu level 2 -->
              <a href="{{ l.url }}" class="current">
              {% include 'multilang' with l.title %}
              {% if block_style == "style_4" %}
                {% for collection in collections %}
                  {% if collection.handle ==  l.handle %}
                    {% if collection.image.src != blank %}
                      {{ collection.image.src | collection_img_url: 'medium' | img_tag:  collection.title }}
                    {% else %} 	
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  {% endif %}
                {% endfor %}
              {% endif %}  
              </a>
              {% if linklists[link.handle] != empty %}<p class="toogleClick"><span class="ico_pls"></span></p>{% endif %}
              {% if  linklists[l.handle] != empty %}
              <ul class="dropdown">
                {% for child_l in linklists[l.handle].links %}
                <!-- Menu level 3 -->
                <li>
                  <a href="{{ child_l.url }}" {% if child_l.active %}class="current"{% endif %}>
                    {% include 'multilang' with child_l.title %}
                  </a>
                </li>
                {% endfor %}
              </ul>
              {% endif %}   
            </div>
        	
            {% if banner_second_style != blank %}
            {% if block_style == "style_2" %}
            {% if forloop.last %}
            <div class="inner col-md-4 column-image">
              <a href="{{ link_banner_second_style }}" title="">
                <img src="{{ banner_second_style | img_url : "450x" }}" alt="" />
              </a>
            </div>
            {% endif%}
            {% endif%}
			{% endif%}
            
            {% endfor %}
            {% if block_style == "style_1" or block_style == "style_2" or block_style == "style_3" or block_style == "style_5" %}
          </div>
        </div>
        {% endif %}

        {% if block_style == "style_3" %}
         {% if display_product %}
          {% if banner_first_style != blank or featured_product != blank %}
          <div class="col-md-3 products-grid">
            {% if title_featured_product != blank %}
            <h4 class="title">{% include 'multilang' with title_featured_product %}</h4>
            {% endif %}
            {% include 'mega-menu-product-grid' %}
          </div>
        {% endif %}
 		{% endif %}
        
        {% elsif block_style == "style_5" %}
        {% if display_image %}
        <div class="col-xs-12 col-md-4 column-2">
          {% if banner_first_style != blank %}
          <p class="first">
            <a href="{{ link_banner_first_style }}" title="">
              <img src="{{ banner_first_style | img_url : "600x" }}" alt="" />
            </a>
          </p>
          {% endif %}
          {% if banner_second_style != blank %}
          <p class="second">
            <a href="{{ link_banner_second_style }}" title="">
              <img src="{{ banner_second_style | img_url : "600x" }}" alt="" />
            </a>
          </p>
          {% endif %}
        </div>
        {% endif %}
        {% endif %}
